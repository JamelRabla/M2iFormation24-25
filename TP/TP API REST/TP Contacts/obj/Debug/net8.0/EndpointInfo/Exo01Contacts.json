  "components": {
    "schemas": {
      "Contact": {
        "required": [
          "birthDate",
          "firstName",
          "gender",
          "lastName"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "lastName": {
            "maxLength": 30,
            "minLength": 0,
            "pattern": "^[A-Z]+$",
            "type": "string"
          },
          "firstName": {
            "maxLength": 30,
            "minLength": 0,
            "pattern": "^[A-Z][A-Za-z\\- ]*$",
            "type": "string"
          },
          "fullName": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "gender": {
            "maxLength": 1,
            "minLength": 0,
            "pattern": "^[FMN]$",
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date"
          },
          "age": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "email": {
            "type": "string",
            "format": "email",
            "nullable": true
          },
          "phoneNumber": {
            "pattern": "^\\+?[0-9]{10,15}$",
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
